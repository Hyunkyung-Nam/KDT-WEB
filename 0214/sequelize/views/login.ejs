<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <title>Document</title>
    </head>
    <body>
        <h1>로그인 페이지</h1>
        <form name="login-form">
            <label for="userid">아이디</label>
            <input type="text" id="userid" /><br />
            <label for="userpw">비밀번호</label>
            <input type="password" id="userpw" /><br />
            <button type="button" onclick="login()">로그인</button><br />
        </form>
        <div class="result"></div>
        <script>
            async function login() {
                const form = document.forms['login-form'];
                const data = {
                    userid: form.userid.value,
                    userpw: form.userpw.value,
                };
                const res = await axios({
                    method: 'POST',
                    url: '/api/user/login',
                    data,
                });
                console.log('login', res);
                if (res.data.result) {
                    alert('로그인성공, 환영합니다');
                    /*프로필 페이지로 가는법 2가지
                    1. jwt/ cookie나 session에 넣고 페이지 열어주는 방법이 일반적
                    2. 포스트로 열기
                    */
                    document.location.href = `/profile/${res.data.id}`;
                    //post방식으로 하려면 form을 hidden으로 만들어서
                    // submit을 해버린다 많이 쓰는 방법이 아님.. 그렇게는 안씀
                } else {
                    alert('로그인실패, 아이디 또는 비밀번호를 확인하세요');
                }
            }
        </script>
    </body>
</html>
