<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="/socket.io/socket.io.js"></script>
        <title>Document</title>
    </head>
    <body>
        <h1>Hello World!</h1>
        <button onclick="hello()">hello</button>
        <button onclick="study()">study</button>
        <button onclick="bye()">bye</button>
        <p id="form-data"></p>

        <script>
            const socket = io();
            const p = document.querySelector('#form-data');
            function hello() {
                socket.emit('hello', '안녕하세요');
            }
            socket.on('RThello', (arg) => {
                p.textContent = `${arg.name} : ${arg.message}`;
            });
            function study() {
                socket.emit('study', '공부합시다');
            }
            socket.on('RTstudy', (arg) => {
                p.textContent = `${arg.name} : ${arg.message}`;
            });
            function bye() {
                socket.emit('bye', '잘가~');
            }
            socket.on('RTbye', (arg) => {
                p.textContent = `${arg.name} : ${arg.message}`;
            });
        </script>
    </body>
</html>
