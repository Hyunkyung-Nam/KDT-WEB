<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    </head>
    <body>
        <h1>이미지 바꾸기</h1>
        <img src="../public/img/q.jpg" width="300" height="300" />
        <br />
        <% for(let i = 0; i < fruits.length; i ++){ %>
        <button type="button" class="btn <%= fruits[i].name %>"><%= fruits[i].kor %></button>
        <% } %>

        <script>
            $('.btn').click(function () {
                let name;

                if ($(this).hasClass('apple')) {
                    name = 'apple';
                } else if ($(this).hasClass('bananas')) {
                    name = 'bananas';
                } else if ($(this).hasClass('grapes')) {
                    name = 'grapes';
                } else if ($(this).hasClass('peaches')) {
                    name = 'peaches';
                }

                $('img').attr('src', `../public/img/${name}.jpg`);
            });
        </script>
    </body>
</html>
