<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <!-- axios사용하기 위해 cdn가져옴 -->
        <title>회원가입</title>
    </head>
    <body>
        <h1>회원가입</h1>
        <form name="sign-up-form">
            <label for="username">이름</label>
            <input type="text" name="username" id="username" />
            <br />
            <br />
            <fieldset>
                <legend>성별</legend>
                <input type="radio" name="gender" id="male" value="남자" />
                <label for="male">남자</label>
                <input type="radio" name="gender" id="female" value="여자" />
                <label for="female">여자</label>
            </fieldset>
            <br />
            <fieldset>
                <legend>생년월일</legend>
                <select name="birthYear" id="year">
                    <% for(let i = 1970 ; i < 2025; i++) { %>
                    <option value="<%= i%>"><%= i%></option>
                    <% } %>
                </select>
                <label for="year">년</label>
                <select name="birthMonth" id="month">
                    <% for(let i = 1 ; i < 13; i++) { %>
                    <option value="<%= i%>"><%= i%></option>
                    <% } %>
                </select>
                <label for="month">월</label>
                <select name="birthDay" id="day">
                    <% for(let i = 1 ; i < 32; i++) { %>
                    <option value="<%= i%>"><%= i%></option>
                    <% } %>
                </select>
                <label for="monbirthDayth">일</label>
            </fieldset>
            <br />
            <fieldset>
                <legend>관심사</legend>
                <input type="checkbox" name="hobby" value="여행" id="travel" />
                <label for="travel">여행</label>
                <input type="checkbox" name="hobby" value="패션" id="fassion" />
                <label for="fassion">패션</label>
                <input type="checkbox" name="hobby" value="음식" id="food" />
                <label for="food">음식</label>
            </fieldset>
            <br />
            <button type="button" onclick="signUp()">회원가입</button>
            <br />
            <br />
            <div class="sign-up-finish"></div>
        </form>
        <script>
            function signUp() {
                const form = document.forms['sign-up-form'];
                const hobby = [];
                const checked = form.querySelectorAll('input[type="checkbox"]:checked');
                checked.forEach((element) => {
                    hobby.push(element.value);
                });

                const signUpFinish = document.querySelector('.sign-up-finish');

                if (form.username.value === '') {
                    alert('이름을 입력하세요');
                    return;
                }

                const data = {
                    name: form.username.value,
                    gender: form.gender.value,
                    birthYear: form.birthYear.value,
                    birthMonth: form.birthMonth.value,
                    birthDay: form.birthDay.value,
                    hobby: hobby,
                };

                axios({
                    method: 'GET',
                    url: '/signUp',
                    params: data,
                }).then((res) => {
                    console.log(res);
                    signUpFinish.textContent = `${res.data.name}님 회원가입이 완료되었습니다.`;
                });
            }
        </script>
    </body>
</html>
