<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
        <title>로그인</title>
        <style>
            .red {
                color: red;
            }
            .blue {
                color: blue;
            }
        </style>
    </head>
    <body>
        <!-- onsubmit이 꼭 앞에있어야함! -->
        <form onsubmit="loginFunc(event)" name="login-form">
            <input type="text" name="id" id="id" placeholder="ID를 입력하세요" /><br />
            <input type="password" name="pw" id="pw" placeholder="PW를 입력하세요" /><br />
            <button type="submit">로그인</button><br />
            <div class="result"></div>
        </form>
        <script>
            function loginFunc(event) {
                event.preventDefault();
                const id = document.forms['login-form'].id.value;
                const pw = document.forms['login-form'].pw.value;

                if (id === '' || pw === '') {
                    alert('아이디, 비밀번호를 모두 입력하세요');
                    return;
                }
                const data = {
                    id,
                    pw,
                };

                axios({
                    method: 'POST',
                    url: '/login',
                    data,
                }).then((res) => {
                    console.log(res);
                    const status = res.data.status;
                    if (status) {
                        $('.result').removeClass('red');
                        $('.result').addClass('blue');
                        $('.result').text('로그인에 성공하였습니다.');
                    } else {
                        $('.result').removeClass('blue');
                        $('.result').addClass('red');
                        $('.result').text('로그인에 실패하였습니다.');
                    }
                });
            }
        </script>
    </body>
</html>
